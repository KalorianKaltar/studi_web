{% extends 'base.html.twig' %}

{% block title %}Sejour index{% endblock %}

{% block body %}
    <h1>Sejour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Motif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sejour in sejours %}
            <tr>
                <td>{{ sejour.id }}</td>
                <td>{{ sejour.dateDebut ? sejour.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sejour.dateFin ? sejour.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sejour.motif }}</td>
                <td>
                    <a href="{{ path('app_sejour_show', {'id': sejour.id}) }}">show</a>
                    <a href="{{ path('app_sejour_edit', {'id': sejour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sejour_new') }}">Create new</a>
{% endblock %}
